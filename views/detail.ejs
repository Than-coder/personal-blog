<style>
  .mt-2 {
    margin-top: 2rem;
  }
  .post-body {
    font-size: 1.2rem;
  }
  .logo {
    max-width: 500px;
  }
  video {
    width: 100%;
  }
  #to-top {
    position: fixed;
    bottom: 10px;
    right: 10px;
    width: 30px;
    height: 50px;
    cursor: pointer;
  }
  #to-top img {
    width: 100%;
    height: 100%;
  }
</style>

<script src="/ckeditor/ckeditor.js"></script>

<div id="detail-page" class="container mt-2">
  <!-- go back -->
  <button onclick="go_back()" class="btn teal">Go Back</button>
  <!-- user permission -->
  <%if(post != null){%> <%if(user){%>
  <!-- check admin -->
  <%if(user.is_admin){%>
  <a href="/dashboard/post-table-edit/?post_id=<%=post.id%>" class="btn teal"
    >Edit</a
  >
  <%}else{%>
  <!-- normal user -->
  <%if(user.id == post.author){%>
  <a href="/dashboard/post-table-edit/?post_id=<%=post.id%>" class="btn teal"
    >Edit</a
  >
  <%}%> <%}%> <%}%> <%}%>

  <div>
    <%if(post != null){%>
    <h3 class="post-title"><%=post.title%></h3>
    <div class="logo">
      <img
        class="responsive-img"
        src="/upload/images/<%=post.title%>.jpg"
        alt="logo"
      />
    </div>
    <div class="post-date">
      <div>
        <strong>Created: </strong
        ><i><%=new Date(post.create_date).toLocaleString()%></i>
      </div>
      <div><strong>Category: </strong><i><%=post.category_name%></i></div>
    </div>
    <!-- post body -->
    <input type="hidden" value="<%=post.id%>" id="post-id" />
    <div
      id="<%= user ? user.is_admin ? 'editor-inline' : user.id == post.author ? 'editor-inline' :'': ''%>"
      class="post-body"
    >
      <%-post.body%>
    </div>
    <%}%>
  </div>
</div>
<!-- to top -->
<div id="to-top" onclick="toTop()"><img src="/svg/arrow-up.svg" alt="" /></div>

<script src="/js/post_detail.js"></script>
